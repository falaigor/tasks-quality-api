// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  avatar    String
  createdAt DateTime @default(now())
  tasks     Tasks[]
}

model Tasks {
  id         String    @id @default(uuid())
  title      String
  status     String
  startedAt  DateTime
  finishedAt DateTime?
  url_task   String
  createdAt  DateTime  @default(now())
  issues     Issues[]
  User       Users?    @relation(fields: [userId], references: [id])
  userId     String?

  @@map("tasks")
}

model Issues {
  id          String   @id @default(uuid())
  description String
  createdAt   DateTime
  Task        Tasks?   @relation(fields: [taskId], references: [id])
  taskId      String?

  @@map("issues")
}
