// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  avatar     String
  created_at DateTime @default(now())
  tasks      Task[]

  @@map("users")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  status      String
  started_at  DateTime
  finished_at DateTime
  url_task    String
  created_at  DateTime @default(now())
  issues      Issue[]
  User        User?    @relation(fields: [user_id], references: [id])
  user_id     String?

  @@map("tasks")
}

model Issue {
  id          String   @id @default(uuid())
  description String
  created_at  DateTime
  Task        Task?    @relation(fields: [task_id], references: [id])
  task_id     String?

  @@map("issues")
}
